<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WriteActivity">

    <Button
        android:id="@+id/btnWriteSelectImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnWriteSelectImageClicked"
        android:text="사진 선택(최대 5개)" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wirte_selectedImg1"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/wirte_selectedImg2"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/wirte_selectedImg3"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/wirte_selectedImg4"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@android:drawable/btn_dialog" />

        <ImageView
            android:id="@+id/wirte_selectedImg5"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_weight="2"
            android:visibility="gone"
            app:srcCompat="@android:drawable/btn_dialog" />
    </LinearLayout>

    <EditText
        android:id="@+id/write_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="제목"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/write_category"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:entries="@array/write_category"/>

    <EditText
        android:id="@+id/write_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="가격 (원)"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/write_content"
        android:layout_width="match_parent"
        android:layout_height="435dp"
        android:ems="10"
        android:hint="게시글 내용을 작성해주세요. 부적절한 글은 사전통보없이 삭제될 수 있습니다."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnWriteComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="btnWriteComplete"
        android:text="완료" />
</LinearLayout>